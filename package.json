{
  "name": "@boardapp/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all --parallel start:postgresql start:redis start:frontend start:backend",
    "start:postgresql": "docker ps -q --filter 'name=dev-postgresql' | xargs -r docker stop && docker ps -aq --filter 'name=dev-postgresql' | xargs -r docker rm && docker run --rm -d --name dev-postgresql -p 5432:5432 -v $(pwd)/.postgresql:/var/lib/postgresql/data -e POSTGRES_USER=admin -e POSTGRES_PASSWORD=supersecret -e POSTGRES_DB=boardapp postgres:latest",
    "start:redis": "docker ps -q --filter 'name=dev-redis' | xargs -r docker stop && docker ps -aq --filter 'name=dev-redis' | xargs -r docker rm && docker run --rm -d --name dev-redis -p 6379:6379 -v $(pwd)/.redis:/data redis:latest",
    "start:prisma": "npx prisma studio",
    "start:frontend": "nx serve frontend",
    "start:backend": "nx serve backend",
    "prod": "npm run build && docker-compose down && npm run build && docker-compose up -d",
    "clean": "docker ps -aq | xargs -r docker stop && docker ps -aq | xargs -r docker rm && docker image prune -af && rm -rf node_modules dist .angular .nx .vscode .redis .postgresql .nginx-logs .fail2ban",
    "repair": "npm run clean && docker image prune -af && npx npm-check-updates -u --reject tailwindcss && npm ci --verbose",
    "build": "npx nx build frontend && npx nx build backend",
    "component": "COMPONENT_NAME=$1 npx nx generate @schematics/angular:component $COMPONENT_NAME --project=frontend --path=apps/frontend/src/app"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~19.2.5",
    "@angular/common": "~19.2.5",
    "@angular/compiler": "~19.2.5",
    "@angular/core": "~19.2.5",
    "@angular/forms": "~19.2.5",
    "@angular/platform-browser": "~19.2.5",
    "@angular/platform-browser-dynamic": "~19.2.5",
    "@angular/router": "~19.2.5",
    "@nestjs/common": "^11.0.13",
    "@nestjs/core": "^11.0.13",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.13",
    "@prisma/client": "^6.5.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "daisyui": "^5.0.12",
    "ioredis": "^5.6.0",
    "npm-run-all": "^4.1.5",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "preline": "^3.0.1",
    "prisma": "^6.5.0",
    "prisma-cache-middleware": "^0.1.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "~7.8.2",
